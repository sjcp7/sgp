<%= form.fields_for :user do |u| %>
    <div class="field">
      <%= u.label :email, class: 'label' %>
      <div class="control">
        <%= u.email_field :email, placeholder: 'exemplo@email.com', class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= u.label :password, class: 'label' %>
      <div class="control">
        <%= u.password_field :password, class: 'input' %>
      </div>
    </div>
<% end %>