<section class="section">
  <div class="container">
    <h1 class="title">Desbloquear Nota</h1>
    <h2 class="subtitle">Este Ã© um pedido para o desbloqueio da nota.</h2>

    <%= form_with model: @request, url: test_requests_path, method: :post, class: 'form' do |f| %>
      <%= f.hidden_field :teacher_id, value: current_user.profile_id %>
      <%= f.hidden_field :test_id, value: @test_id %>
      <div class="field">
        <%= f.label :message, 'Mensagem', class: 'label' %>
        <div class="control">
          <%= f.text_area :message, class: 'textarea' %>
        </div>
      </div>

      <%= f.submit 'Enviar', class: 'button is-primary' %>
    <% end %>
  </div>
</section>