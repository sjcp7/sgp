<section class="section">
  <div class="container">
    <h1 class="title">Avaliações Contínuas</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Curso</th>
          <th>Disciplina</th>
          <th>Turma</th>
          <th>Trimestre</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th><%= @lecture.course.description %></th>
          <th><%= @lecture.subject.description %></th>
          <th><%= @lecture.batch.description %></th>
          <th><%= @school_quarter.quarter %></th>
        </tr>
      </tbody>
    </table>

    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Nome</th>
          <th><abbr title="Média das Avaliações Contínuas">MAC</abbr></th>
          <th><abbr title="Prova do Professor">PP</abbr></th>
          <th><abbr title="Prova do Trimestre">PT</abbr></th>
          <th><abbr title="Média Trimestral">MT</abbr></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <th><%= student.full_name %></th>
            <th><%= student.tests.MAC.find_by(school_quarter: @school_quarter).score %></th>
            <th><%= student.tests.PP.find_by(school_quarter: @school_quarter).score %></th>
            <th><%= student.tests.PT.find_by(school_quarter: @school_quarter).score %></th>
            <th><%= student.tests.MT.find_by(school_quarter: @school_quarter).score %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
